{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-debug",
			"type": "shell",
			"command": "cmake",
			"args": [
	      "--build", "${workspaceFolder}/build",
			  "--config", "Debug"
			],
			"group": {
			  "kind": "build",
			  "isDefault": true
			}
		},
		{
			"label": "build-release",
			"type": "shell",
			"command": "cmake",
			"args": [
			  "--build", "${workspaceFolder}/build",
			  "--config", "Release"
			],
			"group": {
			  "kind": "build",
			  "isDefault": true
			}
		}
	]
}
